<body>
    <header class="header"> <!-- En el header se carga la navbar para los diferentes tipos de usuarios -->
        <nav class="barra-navegacion">            
            <div class="barra-navegacion__elementos">
                <div class="barra-navegacion__logo">
                    <img class="barra-navegacion__logo-img" src="IMG/LogoGYM.png" alt="Logo"/>
                </div>
                <%
                    if(Session["TipoUsuario"] == null || Session["TipoUsuario"].ToString() == "")
                    {
                        //Response.Redirect("../frmLogin.aspx");
                        //Session["TipoUsuario"] = "";
                %>
                
                <ul class="barra-navegacion__ul">
                    <li class="barra-navegacion__li-usuario">Invitado</li>
                    <li class="barra-navegacion__li"><i class="fas fa-home"></i><a id="inicio" href="frmInicio.aspx">Inicio</a></li>
                    <li class="barra-navegacion__li"><i class="fas fa-user"></i><a id="iniciar-sesion" href="frmLogin.aspx">Iniciar sesión</a></li>                    
                    <li class="barra-navegacion__li"><i class="fas fa-dollar-sign"></i><a id="productos" href="frmProductos.aspx">Productos</a></li>
                    <li class="barra-navegacion__li"><i class="fas fa-question-circle"></i><a id="ayuda" href="frmAyuda.aspx">Ayuda</a></li>
                </ul>

                <%  
                    }
                    else if(Session["TipoUsuario"].ToString() == "Administrador")
                    {
                %>

                <ul class="barra-navegacion__ul">
                    <li class="barra-navegacion__li-usuario">Administrador</li>
                    <li class="barra-navegacion__li"><a href="#">Clientes</a></li>
                    <li class="barra-navegacion__li"><a href="#">Productos</a></li>
                    <li class="barra-navegacion__li"><a href="#">Información</a></li>
                </ul>

                <%
                    }
                %>
                    
            </div>
        </nav>
    </header>
    <main> <!-- En el main se encuentra el contenido principal de la página -->
        <form class="form" id="form1" runat="server">
            <div>
                <asp:ContentPlaceHolder ID="Main" runat="server">
                </asp:ContentPlaceHolder>
            </div>
        </form>
    </main>
    
    <aside>

    </aside>
    
    <footer>

    </footer>

